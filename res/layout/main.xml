<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android" >
  <TextView
	  android:id="@+id/falling_asleep_time_label_1"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="It'll take me " />
  <EditText
	  android:id="@+id/falling_asleep_time"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="14"
	  android:hint="14"
	  android:inputType="number"
	  android:textSize="18sp" />
  <TextView
	  android:id="@+id/falling_asleep_time_label_2"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text=" minutes to fall asleep" />
  <Button
	  android:id="@+id/compute_button"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="Tell me at what time I should set the alarm."
	  android:onClick="onClick" />
  <TextView
	  android:id="@+id/result_text"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:text="Fill the value, press the button and it shall happen" />
</LinearLayout>
