<?xml version="1.0" encoding="utf-8"?>
<resources>
  <color name="dark">#404040</color>
  <color name="light">#ebebeb</color>
  
    <style name="IDWWULC" parent="@android:style/Theme">
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">serif</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:colorBackground">@color/dark</item>
		<item name="android:textColor">@color/light</item>
		<item name="android:buttonStyle">@style/Button</item>
    </style>
	<style name="WakeMeUp" parent="@android:style/Widget.TextView">
      <item name="android:gravity">top</item>
      <item name="android:textSize">28sp</item>
	  <item name="android:lineSpacingExtra">14.5sp</item>
	</style>
	<style name="About" parent="@android:style/Widget.TextView">
      <item name="android:textSize">20sp</item>
      <item name="android:typeface">monospace</item>
	</style>
	<style name="Button" parent="@android:style/Widget.Button">
      <item name="android:gravity">fill_vertical|center_horizontal</item>
	  <item name="android:lineSpacingMultiplier">1.2</item>
	  <item name="android:layout_alignParentBottom">true</item>
	  <!-- <item name="android:colorBackground">@color/dark</item> -->
	  <!-- <item name="android:textColor">@color/light</item> -->
	</style>
</resources>
